<!-- show.html.erb -->

<h2>Grader Application Details</h2>

<!-- Display basic information -->
<p>
  <strong>Name:</strong>
  <%= @grader.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @grader.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @grader.phone_number %>
</p>

<p>
  <strong>Courses Wish to Grade:</strong>
  <%= @grader.courses_wish_to_grade %>
</p>

<p>
  <strong>Courses Qualified to Grade:</strong>
  <%= @grader.courses_qualified_to_grade %>
</p>

<!-- Availability Schedule Table -->
<h3 id="availability">Availability Schedule</h3>
<table class="availability-table">
  <thead>
    <tr>
      <th>Day</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
  </thead>
  <tbody>
    <% Grader::DAYS_OF_WEEK.each do |day| %>
      <tr>
        <td><%= day.capitalize %></td>
        <!-- Display start time for each day -->
        <td><%= format_time(@grader.send("#{day.downcase}_start")) %></td>
        <!-- Display end time for each day -->
        <td><%= format_time(@grader.send("#{day.downcase}_end")) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Navigation links -->
<%= link_to 'Edit', edit_grader_path(@grader) %> |
<%= link_to 'Back', new_grader_path %>
