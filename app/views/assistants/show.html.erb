<p style="color: green"><%= notice %></p>

<%= render @assistant %>

<div>
  <%= link_to "Edit this assistant", edit_assistant_path(@assistant),class: 'btn btn-primary' %> 
  <%= link_to "Back to assistants", assistants_path,class: 'btn btn-secondary' %>
  
  <%= link_to "Look up this assistant", 'https://www.osu.edu/search/?query=' +@assistant.email, class: 'btn btn-success'%>

  <%= button_to "Destroy this assistant", @assistant, method: :delete ,class: 'btn btn-danger'%>
</div>
